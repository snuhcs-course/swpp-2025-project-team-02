<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="오늘의 운세"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="사주 팔자 + 대운/세운/월운/일운"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 사주 팔자 (2x4) -->
        <TextView
            android:id="@+id/paljaLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="사주 팔자 (2행 × 4열 = 8자)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/paljaMatrix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/paljaLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView style="@style/FortuneCell" android:text="시간" android:background="#BBDEFB" />
                <TextView style="@style/FortuneCell" android:text="일간" android:background="#FFE082" />
                <TextView style="@style/FortuneCell" android:text="월간" android:background="#BBDEFB" />
                <TextView style="@style/FortuneCell" android:text="연간" android:background="#BBDEFB" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView style="@style/FortuneCell" android:text="시지" android:background="#E3F2FD" />
                <TextView style="@style/FortuneCell" android:text="일지" android:background="#FFCC80" />
                <TextView style="@style/FortuneCell" android:text="월지" android:background="#E3F2FD" />
                <TextView style="@style/FortuneCell" android:text="연지" android:background="#E3F2FD" />
            </LinearLayout>
        </LinearLayout>

        <!-- 대운/세운/월운/일운 (2x4) -->
        <TextView
            android:id="@+id/daewoonLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="대운/세운/월운/일운 (2행 × 4열 = 8자)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/paljaMatrix"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/daewoonMatrix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/daewoonLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView style="@style/FortuneCell" android:text="대운" android:background="#C8E6C9" />
                <TextView style="@style/FortuneCell" android:text="세운" android:background="#C8E6C9" />
                <TextView style="@style/FortuneCell" android:text="월운" android:background="#C8E6C9" />
                <TextView style="@style/FortuneCell" android:text="일운" android:background="#C8E6C9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView style="@style/FortuneCell" android:text="대운지" android:background="#E8F5E9" />
                <TextView style="@style/FortuneCell" android:text="세운지" android:background="#E8F5E9" />
                <TextView style="@style/FortuneCell" android:text="월운지" android:background="#E8F5E9" />
                <TextView style="@style/FortuneCell" android:text="일운지" android:background="#E8F5E9" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/calculation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="총 16개의 글자 (8 + 8 = 16)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#4CAF50"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/daewoonMatrix"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이 16개 글자의 조합으로\n오늘의 운세가 계산됩니다\n\n• 대운: 10년 단위 큰 흐름\n• 세운: 1년 단위 운세\n• 월운: 1달 단위 운세\n• 일운: 하루 단위 운세"
            android:textSize="15sp"
            android:lineSpacingExtra="6dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/calculation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>