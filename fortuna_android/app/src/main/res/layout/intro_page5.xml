<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="음양 - 양(+)과 음(-)"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="천간은 음과 양으로 나뉩니다"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 음양 구분 -->
        <LinearLayout
            android:id="@+id/yinYangDivision"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="양(+) - 갑, 병, 무, 경, 임"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="#FF6F00"
                android:padding="16dp"
                android:layout_marginBottom="8dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:layout_marginBottom="16dp">

                <TextView style="@style/YinYangCell" android:text="甲\n갑" android:background="#A5D6A7" />
                <TextView style="@style/YinYangCell" android:text="丙\n병" android:background="#EF9A9A" />
                <TextView style="@style/YinYangCell" android:text="戊\n무" android:background="#FFCC80" />
                <TextView style="@style/YinYangCell" android:text="庚\n경" android:background="#BCAAA4" />
                <TextView style="@style/YinYangCell" android:text="壬\n임" android:background="#90CAF9" />
            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="음(-) - 을, 정, 기, 신, 계"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="#37474F"
                android:padding="16dp"
                android:layout_marginBottom="8dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5">

                <TextView style="@style/YinYangCell" android:text="乙\n을" android:background="#C8E6C9" />
                <TextView style="@style/YinYangCell" android:text="丁\n정" android:background="#FFCDD2" />
                <TextView style="@style/YinYangCell" android:text="己\n기" android:background="#FFE0B2" />
                <TextView style="@style/YinYangCell" android:text="辛\n신" android:background="#D7CCC8" />
                <TextView style="@style/YinYangCell" android:text="癸\n계" android:background="#BBDEFB" />
            </GridLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="음양은 관계성을 결정하는데 중요한 역할을 합니다\n\n• 양(+)의 속성 → 같은 음양 = 편(偏)\n• 양(+)의 속성 → 다른 음양 = 정(正)\n\n예: 양(+)의 불인 병(丙)\n  - 을목(乙木, 음) → 정인(正印)\n  - 갑목(甲木, 양) → 편인(偏印)"
            android:textSize="15sp"
            android:lineSpacingExtra="6dp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/yinYangDivision"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>