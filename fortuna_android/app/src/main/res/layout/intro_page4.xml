<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="오행 - 5가지 속성"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="목(木) 화(火) 토(土) 금(金) 수(水)"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 오행 원형 다이어그램 -->
        <LinearLayout
            android:id="@+id/ohangDiagram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 상생 순환 화살표 표시 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수(水) → 목(木) → 화(火) → 토(土) → 금(金) → 수"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="16dp"
                android:background="#E3F2FD" />
        </LinearLayout>

        <!-- 천간-오행 매핑 -->
        <LinearLayout
            android:id="@+id/cheonganMapping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/ohangDiagram"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="천간 → 오행 대응"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="갑 을"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#A5D6A7"
                    android:padding="12dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:textSize="18sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="목(木) 나무"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:background="#C8E6C9"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="병 정"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#EF9A9A"
                    android:padding="12dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:textSize="18sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="화(火) 불"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:background="#FFCDD2"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="무 기"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#FFCC80"
                    android:padding="12dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:textSize="18sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="토(土) 흙"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:background="#FFE0B2"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="경 신"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#BCAAA4"
                    android:padding="12dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:textSize="18sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="금(金) 쇠"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:background="#D7CCC8"
                    android:padding="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="임 계"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#90CAF9"
                    android:padding="12dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="→"
                    android:textSize="18sp"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="수(水) 물"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:background="#BBDEFB"
                    android:padding="12dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="지지(12지)도 각각 오행 속성을 가집니다\n• 인묘(寅卯) = 목\n• 사오(巳午) = 화\n• 축진미술(丑辰未戌) = 토\n• 신유(申酉) = 금\n• 자해(子亥) = 수"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cheonganMapping"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>