<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/today_saju_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="오늘의 운기"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/today_saju_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="4"
        android:rowCount="3">

        <!-- 대운 레이블 -->
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:text="대운"
            android:textColor="#AAAAAA"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!-- 세운 레이블 -->
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center"
            android:text="세운"
            android:textColor="#AAAAAA"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!-- 월운 레이블 -->
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_row="0"
            android:layout_column="2"
            android:gravity="center"
            android:text="월운"
            android:textColor="#AAAAAA"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!-- 일운 레이블 -->
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_row="0"
            android:layout_column="3"
            android:gravity="center"
            android:text="일운"
            android:textColor="#AAAAAA"
            android:textSize="11sp"
            android:textStyle="bold" />

        <!-- 대운 - 천간 -->
        <LinearLayout
            android:id="@+id/daeun_stem_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="1"
            android:layout_column="0"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/daeun_stem_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="土, 흙" />

            <TextView
                android:id="@+id/daeun_stem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="기" />
        </LinearLayout>

        <!-- 세운 - 천간 -->
        <LinearLayout
            android:id="@+id/saeun_stem_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="1"
            android:layout_column="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/saeun_stem_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="木, 나무" />

            <TextView
                android:id="@+id/saeun_stem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="을" />
        </LinearLayout>

        <!-- 월운 - 천간 -->
        <LinearLayout
            android:id="@+id/wolun_stem_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="1"
            android:layout_column="2"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/wolun_stem_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="火, 불" />

            <TextView
                android:id="@+id/wolun_stem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="병" />
        </LinearLayout>

        <!-- 일운 - 천간 -->
        <LinearLayout
            android:id="@+id/ilun_stem_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="1"
            android:layout_column="3"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/ilun_stem_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="金, 쇠" />

            <TextView
                android:id="@+id/ilun_stem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="신" />
        </LinearLayout>

        <!-- 대운 - 지지 -->
        <LinearLayout
            android:id="@+id/daeun_branch_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="2"
            android:layout_column="0"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/daeun_branch_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="金, 쇠" />

            <TextView
                android:id="@+id/daeun_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="유" />
        </LinearLayout>

        <!-- 세운 - 지지 -->
        <LinearLayout
            android:id="@+id/saeun_branch_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="2"
            android:layout_column="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/saeun_branch_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="火, 불" />

            <TextView
                android:id="@+id/saeun_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="사" />
        </LinearLayout>

        <!-- 월운 - 지지 -->
        <LinearLayout
            android:id="@+id/wolun_branch_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="2"
            android:layout_column="2"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/wolun_branch_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="土, 흙" />

            <TextView
                android:id="@+id/wolun_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="술" />
        </LinearLayout>

        <!-- 일운 - 지지 -->
        <LinearLayout
            android:id="@+id/ilun_branch_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="2"
            android:layout_column="3"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/ilun_branch_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="金, 쇠" />

            <TextView
                android:id="@+id/ilun_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="유" />
        </LinearLayout>

    </GridLayout>

</LinearLayout>
