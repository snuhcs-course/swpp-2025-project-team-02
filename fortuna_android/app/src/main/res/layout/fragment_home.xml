<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000">

    <!-- 메인 컨텐츠 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 상단 헤더 -->
        <include layout="@layout/header_fortuna" />

        <!-- 탭 레이아웃 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp">

            <!-- 오늘의 운세 탭 -->
            <TextView
                android:id="@+id/tabTodayFortune"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 운세"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- 구분선 -->
            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginHorizontal="4dp"
                android:background="#444444" />

            <!-- 상세 분석 탭 -->
            <TextView
                android:id="@+id/tabDetailAnalysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세 분석"
                android:textColor="#888888"
                android:textSize="15sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

        <!-- ViewPager2 for swipeable tabs -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- 개운하기 버튼 (Extended Floating Action Button) -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_refresh_fortune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="오늘의 기운 보충하러가기"
        android:textColor="#000000"
        android:textSize="14sp"
        android:contentDescription="오늘의 기운 보충하러가기"
        app:backgroundTint="#FFCC4D"
        app:elevation="6dp" />

</FrameLayout>
