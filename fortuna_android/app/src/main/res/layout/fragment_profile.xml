<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 상단 앱바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fortuna"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_profile_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_selector"
            android:textColor="@color/button_text_color"
            android:text="프로필 수정"
            android:textSize="12sp" />

        <Button
            android:id="@+id/logout_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:textColor="@color/button_text_color"
            android:text="로그아웃"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- 환영 메시지 -->
    <TextView
        android:id="@+id/welcome_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:text="환영합니다, 소개원실님!" />

    <!-- 사주팔자 표시 -->
    <TextView
        android:id="@+id/saju_view_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="당신의 사주팔자"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/saju_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:columnCount="4"
        android:rowCount="2"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="true">

        <!-- 시 -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/hourly_ganji_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="정" />
            <TextView
                android:id="@+id/hourly_ganji_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="오" />
        </LinearLayout>

        <!-- 일 -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/daily_ganji_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="무" />
            <TextView
                android:id="@+id/daily_ganji_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="신" />
        </LinearLayout>

        <!-- 월 -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/monthly_ganji_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="기" />
            <TextView
                android:id="@+id/monthly_ganji_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="묘" />
        </LinearLayout>

        <!-- 년 -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/yearly_ganji_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="을" />
            <TextView
                android:id="@+id/yearly_ganji_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="해" />
        </LinearLayout>

    </GridLayout>

    <!-- 메인 콘텐츠 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메인 앱 화면입니다"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="여기에 앱의 주요 기능들을 추가하세요"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- 향후 기능 버튼들을 추가할 공간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- 예시 기능 버튼들 -->
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button_selector"
                android:textColor="@color/button_text_color"
                android:text="기능 1" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button_selector"
                android:textColor="@color/button_text_color"
                android:text="기능 2" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button_selector"
                android:textColor="@color/button_text_color"
                android:text="기능 3" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
