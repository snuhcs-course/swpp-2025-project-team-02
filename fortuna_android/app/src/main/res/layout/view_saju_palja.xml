<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/saju_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="당신의 사주팔자"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/saju_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="4"
        android:rowCount="2">

        <!-- 시 - 천간 -->
        <LinearLayout
            android:id="@+id/hourly_ganji_1_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="0"
            android:layout_column="0"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/hourly_ganji_1_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="水, 물" />

            <TextView
                android:id="@+id/hourly_ganji_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="임" />
        </LinearLayout>

        <!-- 일 - 천간 -->
        <LinearLayout
            android:id="@+id/daily_ganji_1_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="0"
            android:layout_column="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/daily_ganji_1_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="土, 흙" />

            <TextView
                android:id="@+id/daily_ganji_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="무" />
        </LinearLayout>

        <!-- 월 - 천간 -->
        <LinearLayout
            android:id="@+id/monthly_ganji_1_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="0"
            android:layout_column="2"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/monthly_ganji_1_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="土, 흙" />

            <TextView
                android:id="@+id/monthly_ganji_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="기" />
        </LinearLayout>

        <!-- 년 - 천간 -->
        <LinearLayout
            android:id="@+id/yearly_ganji_1_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="0"
            android:layout_column="3"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/yearly_ganji_1_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="木, 나무" />

            <TextView
                android:id="@+id/yearly_ganji_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="을" />
        </LinearLayout>

        <!-- 시 - 지지 -->
        <LinearLayout
            android:id="@+id/hourly_ganji_2_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="1"
            android:layout_column="0"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/hourly_ganji_2_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="火, 불" />

            <TextView
                android:id="@+id/hourly_ganji_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="오" />
        </LinearLayout>

        <!-- 일 - 지지 -->
        <LinearLayout
            android:id="@+id/daily_ganji_2_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="1"
            android:layout_column="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/daily_ganji_2_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="金, 쇠" />

            <TextView
                android:id="@+id/daily_ganji_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="신" />
        </LinearLayout>

        <!-- 월 - 지지 -->
        <LinearLayout
            android:id="@+id/monthly_ganji_2_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="1"
            android:layout_column="2"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/monthly_ganji_2_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="木, 나무" />

            <TextView
                android:id="@+id/monthly_ganji_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="묘" />
        </LinearLayout>

        <!-- 년 - 지지 -->
        <LinearLayout
            android:id="@+id/yearly_ganji_2_card"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:layout_row="1"
            android:layout_column="3"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <TextView
                android:id="@+id/yearly_ganji_2_element"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                tools:text="水, 물" />

            <TextView
                android:id="@+id/yearly_ganji_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="해" />
        </LinearLayout>

    </GridLayout>

</LinearLayout>
