<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ARFragment">

    <!-- AR Surface View -->
    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Transparent Bounding Box Overlay (on top of AR view) -->
    <com.example.fortuna_android.ui.BoundingBoxOverlayView
        android:id="@+id/boundingBoxOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="visible" />

    <!-- Needed Element Banner (Top) - Pokemon GO style semi-transparent -->
    <LinearLayout
        android:id="@+id/neededElementBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/ar_element_banner_background"
        android:paddingVertical="10dp"
        android:paddingHorizontal="16dp"
        android:elevation="4dp"
        android:visibility="gone">

        <!-- Element Color Circle -->
        <View
            android:id="@+id/elementColorIndicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/neededElementText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="찾아야하는 기운: 木"
                android:textSize="15sp"
                android:textColor="#424242"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/collectionProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 5 수집"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Celebration Overlay -->
    <FrameLayout
        android:id="@+id/celebrationOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false">

        <!-- Celebration Icon -->
        <TextView
            android:id="@+id/celebrationIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:text="✨"
            android:textSize="80sp"
            android:gravity="center"
            android:alpha="0" />

    </FrameLayout>

    <!-- Quest Completion Notification Overlay -->
    <FrameLayout
        android:id="@+id/questCompletionOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false">

    </FrameLayout>

    <!-- UI Controls -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- All Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Back Button (Left) - Pokemon GO style -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:background="@drawable/ar_back_button_background"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                android:padding="10dp"
                app:tint="#424242" />

            <!-- Left Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Capture Button (Center) - Pokemon GO style -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/scanButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@drawable/ar_scan_button_selector"
                android:minWidth="120dp"
                android:text="수집"
                android:textColor="@color/ar_scan_button_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:elevation="8dp"
                android:gravity="center"
                android:textAlignment="center" />

            <!-- Right Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Clear Button (Right) - Pokemon GO style -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearButton"
                android:layout_width="70dp"
                android:layout_height="38dp"
                android:background="@drawable/ar_reset_button_background"
                android:paddingHorizontal="14dp"
                android:text="리셋"
                android:textColor="#424242"
                android:textSize="13sp"
                android:textStyle="bold"
                android:elevation="6dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>