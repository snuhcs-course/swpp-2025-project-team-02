<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="십성 - 10가지 관계성"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="오행 간의 관계를 나타내는 10가지 별"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 십성 원형 큐 다이어그램 -->
        <LinearLayout
            android:id="@+id/sipseongCircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFF3E0"
            android:padding="20dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="목 → 화 → 토 → 금 → 수 → (목)"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp" />

            <!-- 나(본인) 기준 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="나 (본인)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="#FFE082"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="→ 비겁\n(比劫)"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingStart="8dp" />
            </LinearLayout>

            <!-- 이전 오행 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="← 1칸 전"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="#E0F7FA"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="→ 인성\n(정인/편인)"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingStart="8dp" />
            </LinearLayout>

            <!-- 다음 오행 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="→ 1칸 후"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="#F1F8E9"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="→ 식상\n(식신/상관)"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingStart="8dp" />
            </LinearLayout>

            <!-- 2칸 후 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="→ 2칸 후"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="#FFF9C4"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="→ 재성\n(정재/편재)"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingStart="8dp" />
            </LinearLayout>

            <!-- 3칸 후 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="→ 3칸 후"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="#FFECB3"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="→ 관성\n(정관/편관)"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/example"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="예: 정(丁, 음의 불)인 사람\n\n갑목(甲) = 양의 나무 = 편인\n을목(乙) = 음의 나무 = 정인\n기토(己) = 음의 흙 = 식신\n무토(戊) = 양의 흙 = 상관"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/black"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/sipseongCircle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
