<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="#000000">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="개운 - 기운 보충하기"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="부족한 오행을 채워 운세를 개선하세요"
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 오행 아이콘 표시 -->
        <LinearLayout
            android:id="@+id/elementIcons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="木"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="火"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#F44336"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="土"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#FF9800"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="金"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#FFC107"
                android:textColor="#000000"
                android:layout_margin="4dp" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="水"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_margin="4dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/whatIsLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="개운이란?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/elementIcons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/whatIsDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="개운(改運)은 운을 바꾼다는 뜻으로,\n사주에서 부족한 오행의 기운을 보충하여\n운세의 균형을 맞추는 것을 말합니다."
            android:textSize="15sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/whatIsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/howToLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="기운 보충 방법"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/whatIsDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/howToDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="AR 카메라를 통해 주변 환경에서\n부족한 오행에 해당하는 물체를 찾아보세요.\n\n• 木(목): 나무, 식물, 초록색 물체\n• 火(화): 빨간색, 불꽃 모양\n• 土(토): 흙, 돌, 노란색/갈색 물체\n• 金(금): 금속, 흰색/은색 물체\n• 水(수): 물, 파란색 물체"
            android:textSize="15sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/howToLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tipLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tip"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#9C27B0"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/howToDesc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tipDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="홈 화면의 '오늘의 기운 보충하러 가기'\n버튼을 눌러 개운을 시작할 수 있어요!"
            android:textSize="15sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="48dp"
            app:layout_constraintTop_toBottomOf="@id/tipLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
