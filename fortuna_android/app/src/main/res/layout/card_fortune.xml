                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💡 긍정적인 마음가짐을 유지하세요"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/tvBestTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⏰ 오전 10시 ~ 12시"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/tvLuckyDirection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🧭 동쪽"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/tvLuckyColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🎨 빨간색"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- 차크라 리딩 섹션 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔮 오늘의 원소"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/llChakraReadings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </LinearLayout>

            <!-- 상세보기 토글 버튼 -->
            <Button
                android:id="@+id/btnToggleDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="운세 상세보기"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:backgroundTint="#3A3A3A"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp" />

            <!-- 왜 부족한지 설명 버튼 (동적 텍스트) -->
            <Button
                android:id="@+id/btnWhyDeficient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나무가 왜 부족한가요?"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:backgroundTint="#4A4A4A"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp" />

            <!-- 오늘의 기운 보충하러가기 버튼 -->
            <Button
                android:id="@+id/btnRefreshFortune"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘의 기운 보충하러가기"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:backgroundTint="#FFCC4D"
                android:paddingTop="16dp"
                android:paddingBottom="16dp" />

