<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardBackgroundColor="#2A2856"
    app:cardElevation="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- 상단: 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내일을 비추는"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="행운의 운세"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:gravity="center" />

            <!-- 날짜 및 간지 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/tvFortuneDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025년 09월 20일"
                    android:textColor="#CCCCCC"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textColor="#CCCCCC"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvTomorrowGanji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="정유일(🔥)"
                    android:textColor="#CCCCCC"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- 중앙: 오행 원소 한자 + 무한대 심볼 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <!-- 오행 한자 큰 글씨 -->
                <TextView
                    android:id="@+id/tvElementCharacter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="火"
                    android:textColor="#F93E3E"
                    android:textSize="120sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- 무한대 심볼 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="∞"
                    android:textColor="#9B88D6"
                    android:textSize="40sp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

            <!-- 운세 점수 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 운세"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvOverallFortune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85"
                    android:textColor="#FFD700"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / 100"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- 메인 메시지 박스 -->

            <!-- 행운의 키워드 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="#3A3668"
                android:orientation="vertical"
                android:padding="28dp">

                <TextView
                    android:id="@+id/tvSpecialMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:lineSpacingExtra="8dp"
                    android:text="오늘은 새로운 기회가 찾아올 날입니다."
                    android:textColor="#EEEEEE"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvFortuneSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="6dp"
                    android:text="긍정적인 에너지가 가득한 하루가 될 것입니다."
                    android:textColor="#DDDDDD"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌸"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="행운의 키워드"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvKeywords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#긍정운 #행운의시간"
                    android:textColor="#9B88D6"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4A4478"
                android:layout_marginBottom="24dp" />

            <!-- 상세 정보 섹션 (토글 가능) -->
            <LinearLayout
                android:id="@+id/llDetailedInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- 오행 균형 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌟 오행 균형"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvElementBalance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="화(火)의 기운이 강합니다."
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

                <!-- 일일 가이던스 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎯 오늘의 가이드"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tvKeyAdvice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💡 긍정적인 마음가짐을 유지하세요"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/tvBestTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⏰ 오전 10시 ~ 12시"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/tvLuckyDirection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🧭 동쪽"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/tvLuckyColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🎨 빨간색"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- 차크라 리딩 섹션 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔮 오늘의 원소"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:id="@+id/llChakraReadings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

                <!-- 사주 궁합 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="♾️ 사주 궁합"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvSajuCompatibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="오늘은 목(木) 기운과 잘 맞습니다."
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 상세보기 토글 버튼 -->
            <Button
                android:id="@+id/btnToggleDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="운세 상세보기"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:backgroundTint="#7B6AB8"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp" />

            <!-- 공유하기 버튼 -->
            <TextView
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운세 공유하기"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp" />

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>
