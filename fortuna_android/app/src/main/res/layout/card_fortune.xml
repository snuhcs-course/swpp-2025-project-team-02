            <!-- 상단: 날짜 (크게) -->
            <TextView
                android:id="@+id/tvFortuneDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025년 09월 20일"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <!-- 오늘의 운세 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 운세"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginBottom="32dp"
                android:gravity="center" />

            <!-- 간지 정보 -->
            <TextView
                android:id="@+id/tvTomorrowGanji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정유일(🔥)"
                android:textColor="#CCCCCC"
                android:textSize="13sp"
                android:layout_marginBottom="32dp" />

            <!-- 중앙: 오행 원소 한자 + 기운 멘트 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <!-- 오행 한자 큰 글씨 -->
                <TextView
                    android:id="@+id/tvElementCharacter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="火"
                    android:textColor="#F93E3E"
                    android:textSize="120sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- 기운 멘트 -->
                <TextView
                    android:id="@+id/tvElementMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘은 불의 기운이 강한 날입니다"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

            <!-- 운세 점수 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 운세"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvOverallFortune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85"
                    android:textColor="#FFD700"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / 100"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />

            </LinearLayout>

