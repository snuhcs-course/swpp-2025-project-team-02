<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 보라색 베이스의 화려한 그라데이션 -->
    <gradient
        android:angle="135"
        android:startColor="#9C27B0"
        android:centerColor="#E040FB"
        android:endColor="#7C4DFF"
        android:type="linear" />

    <!-- 둥근 모서리 -->
    <corners android:radius="24dp" />

    <!-- 약간의 테두리 효과 -->
    <stroke
        android:width="2dp"
        android:color="#FFD700" />

</shape>
