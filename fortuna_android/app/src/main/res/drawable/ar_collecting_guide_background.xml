<?xml version="1.0" encoding="utf-8"?>
<!-- Game style friendly guide banner with gradient -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="20dp" />

    <!-- Blue-purple gradient for friendly game feel -->
    <gradient
        android:angle="135"
        android:startColor="#DD4CAF50"
        android:centerColor="#DD66BB6A"
        android:endColor="#DD81C784"
        android:type="linear" />

    <!-- Subtle white border for Pokemon GO style -->
    <stroke
        android:width="2dp"
        android:color="#99FFFFFF" />
</shape>
