<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Subtle gradient background for active TTS state -->
    <gradient
        android:angle="135"
        android:startColor="#1AFFD700"
        android:centerColor="#0DFFD700"
        android:endColor="#1AFFD700"
        android:type="linear" />

    <!-- Rounded corners to match card design -->
    <corners android:radius="8dp" />

    <!-- Golden glow stroke -->
    <stroke
        android:width="1dp"
        android:color="#40FFD700" />

    <!-- Padding for text -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
